<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FacialFeaturesActivity"
android:background="#cad1e9"
    >

    <!--<Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/btn"/>
    -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/font7"
        android:text=" FACIAL FEATURES \n          AND\n    EXPRESSIONS\n      Classifier"
        android:textSize="50sp"
        android:elevation="2dp"
        app:layout_constraintVertical_bias="0.1"
        android:padding="20dp"
        tools:targetApi="lollipop"
        android:id="@+id/text"
        android:textColor="@color/black"

        />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/text"
        android:src="@drawable/info_foreground"
        android:background="@drawable/layout_bg"
        android:elevation="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.05"
        android:id="@+id/info"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/album_foreground"
        android:layout_margin="30dp"
        android:background="#71bbd4"
        android:elevation="5dp"
        app:layout_constraintVertical_bias="0.05"
        android:id="@+id/fileImg"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/fileImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/camera_foreground"
        android:layout_margin="30dp"
        android:background="#71bbd4"
        android:elevation="5dp"
        app:layout_constraintVertical_bias="0"
        android:id="@+id/camera"
        />





</androidx.constraintlayout.widget.ConstraintLayout>